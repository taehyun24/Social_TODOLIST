<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context="com.example.todolist.fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/jalnan"
            android:text="홈"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/jalnan"
            android:text="2022년 1월"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/re_text"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/jalnan"
                android:text="월"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_tues"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/jalnan"
                android:text="화"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_wednes"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/jalnan"
                android:text="수"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_thurs"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/jalnan"
                android:text="목"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_fri"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/jalnan"
                android:text="금"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_satur"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/jalnan"
                android:text="토"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_sun"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/jalnan"
                android:text="일"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/re_circle"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/circle1"
                android:fontFamily="@font/jalnan"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_cir2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/circle1"
                android:fontFamily="@font/jalnan"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cir3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="26dp"
                android:background="@drawable/circle1"
                android:fontFamily="@font/jalnan"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cir4"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="28dp"
                android:background="@drawable/circle1"
                android:fontFamily="@font/jalnan"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cir5"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="28dp"
                android:background="@drawable/circle1"
                android:fontFamily="@font/jalnan"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cir6"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="29dp"
                android:background="@drawable/circle1"
                android:fontFamily="@font/jalnan"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cir7"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="29dp"
                android:background="@drawable/circle1"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <android.widget.Button
            android:id="@+id/todo_btn"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/rect_white"
            android:fontFamily="@font/jalnan"
            android:text="할일 +"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            tools:ignore="TouchTargetSizeCheck" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/memo_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/memo_item" />

    </LinearLayout>

</LinearLayout>