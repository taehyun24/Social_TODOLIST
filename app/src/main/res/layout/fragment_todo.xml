<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/todoFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:background="#000000"
    android:orientation="vertical"
    tools:context="com.example.todolist.fragments.TodoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:background="@drawable/rect3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_todo"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/jalnan"
            android:text="할일"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="309dp"
            android:layout_height="39dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rect2"
            android:fontFamily="@font/jalnan"
            android:includeFontPadding="false"
            android:paddingStart="10dp"
            android:text="이름을 입력해주세요."
            android:textColor="#6B000000"
            android:textSize="10sp"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/et_time"
            android:layout_width="309dp"
            android:layout_height="39dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rect2"
            android:fontFamily="@font/jalnan"
            android:includeFontPadding="false"
            android:paddingStart="10dp"
            android:text="시간을 정해주세요."
            android:textColor="#6B000000"
            android:textSize="10sp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/create_button"
            android:layout_width="52dp"
            android:layout_height="40dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/rect1"
            android:fontFamily="@font/jalnan"
            android:text="생성 +"
            android:textSize="10sp"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/et_day"
            android:layout_width="309dp"
            android:layout_height="39dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rect2"
            android:fontFamily="@font/jalnan"
            android:includeFontPadding="false"
            android:paddingStart="10dp"
            android:text="언제언제 반복할까요?"
            android:textColor="#6B000000"
            android:textSize="10sp"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/jalnan"
            android:text="시작일 2022-01-10"
            android:textColor="#000000"
            android:textSize="10sp" />

    </LinearLayout>
</LinearLayout>